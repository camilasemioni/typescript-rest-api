{
    "openapi": "3.0.2",
    "info": {
        "title": "Challenge 02",
        "description": "REST API for management of customers",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:{port}/api/{version}",
            "variables": {
                "port": {
                    "default": "3000"
                },
                "version": {
                    "default": "v1",
                    "enum": [
                        "v1"
                    ]
                }
            }
        }
    ],
    "tags": [
        {
            "name": "Client",
            "description": "Client management"
        }
    ],
    "paths": {
        "/client": {
            "get": {
                "summary": "Gets all clients",
                "tags": [
                    "Client"
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/client/{clientId}": {
            "get": {
                "summary": "Gets the specified client",
                "tags": [
                    "Client"
                ],
                "parameters": [
                    {
                        "name": "clientId",
                        "in": "path",
                        "required": true,
                        "description": "Client object id",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "400": {
                        "description": "Client Id invalid"
                    },
                    "404": {
                        "description": "Client Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            },
            "put": {
                "summary": "Updates a client",
                "tags": [
                    "Client"
                ],
                "parameters": [
                    {
                        "name": "clientId",
                        "in": "path",
                        "required": true,
                        "description": "Client object id",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Client data to be updated",
                    "required": false,
                    "content": {
                        "application/json": {}
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated Client Successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "400": {
                        "description": "Invalid Input"
                    },
                    "404": {
                        "description": "Client Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            },
            "delete": {
                "summary": "Deletes a client",
                "tags": [
                    "Client"
                ],
                "parameters": [
                    {
                        "name": "clientId",
                        "in": "path",
                        "required": true,
                        "description": "Client object id",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted Client Successfully",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "400": {
                        "description": "Invalid Input"
                    },
                    "404": {
                        "description": "Tutor Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    }
}