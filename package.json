{
    "name": "node",
    "version": "1.0.0",
    "main": "app.js",
    "author": "Bruno Ortigosa Cruz <brunortigosa@gmail.com>",
    "license": "MIT",
    "scripts": {
        "start": "node dist/app.js",
        "build": "tsc",
        "dev": "eslint src --fix && tsc-watch --onSuccess \"node ./dist/app.js\"",
        "lint": "eslint src --fix",
        "test": "jest",
        "test-verbose": "vitest --run --reporter verbose",
        "test-watch": "vitest --watch"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/express": "^4.17.21",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^20.9.0",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "@types/jest": "^29.5.10",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "tsc-watch": "^6.0.4"
    },
    "dependencies": {
        "@joi/date": "^2.1.0",
        "axios": "^1.6.2",
        "body-parser": "^1.20.2",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "http-status-codes": "^2.3.0",
        "joi": "^17.11.0",
        "mongoose": "^8.0.0",
        "swagger-ui-express": "^5.0.0",
        "typescript": "^5.2.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "modulePathIgnorePatterns": [
            "<rootDir>/src/tests/errors"
        ],
        "testMatch": [
            "**/*.test.ts"
        ]
    }
}